<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.fatmaali.activity119.ButtonAnimation">

    <Button
        android:id="@+id/btn_help"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_above="@+id/btn_share"
        android:layout_alignLeft="@+id/btn_share"
        android:layout_alignStart="@+id/btn_share"
        android:layout_marginBottom="10dp"
        android:background="@drawable/ic_help_black_24dp"
        android:onClick="btn_help"
        android:visibility="invisible" />

    <Button
        android:id="@+id/btn_share"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_above="@+id/btn_home"
        android:layout_alignLeft="@+id/btn_home"
        android:layout_alignStart="@+id/btn_home"
        android:layout_marginBottom="10dp"
        android:background="@drawable/ic_share_black_24dp"
        android:onClick="btn_share"
        android:visibility="invisible" />

    <Button
        android:id="@+id/btn_home"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_above="@+id/btn_email"
        android:layout_alignLeft="@+id/btn_email"
        android:layout_alignStart="@+id/btn_email"
        android:layout_marginBottom="10dp"
        android:background="@drawable/ic_home_black_24dp"
        android:onClick="btn_home"
        android:visibility="invisible" />


    <Button
        android:id="@+id/btn_email"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_above="@+id/btn_setting"
        android:layout_alignLeft="@+id/btn_setting"
        android:layout_alignStart="@+id/btn_setting"
        android:layout_marginBottom="10dp"
        android:background="@drawable/ic_email_black_24dp"
        android:onClick="btn_email"
        android:visibility="invisible" />

    <Button
        android:id="@+id/btn_setting"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="end|bottom"
        android:onClick="btn_setting"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/ic_settings_black_24dp" />

</RelativeLayout>
